% ( x1 y1 x2 y2 x3 y3 -- )
/bezierto
 { %def
	 % collect all args
	 /endy exch def
	 /endx exch def
 /cont2y exch def
 /cont2x exch def
 /cont1y exch def
 /cont1x exch def
 currentpoint
 /orgy exch def
 /orgx exch def
 % got all points, fine, draw control lines
 gsave
	 % make dashed output, in some other color
	 [ 7 3 ] 0 setdash
	 ControlColor setrgbcolor
	 % draw first control line
	 cont1x cont1y lineto
	 % draw second control line
	 cont2x cont2y moveto
	 endx endy lineto
	 stroke
 grestore
 % draw the actual curve
 cont1x cont1y cont2x cont2y endx endy curveto
} def

% calculate a rotation matrix
% / cos(α)  -sin(α) \
% \ sin(α)   cos(α) /
% (angle -- array)
/rotationmatrix 
 { %def
	 % calculate the d value
	 dup cos
	 % got d value, goto c
	 exch dup sin -1 mul
	 % got c value, goto b
	 exch dup sin
	 % got b value, goto a
	 exch cos
	 % a value, that's it

	 % package them into a nifty array
	 4 array astore
 } def

% multiply a matrix with a vector
% (matrix v w -- x y)
/matrixmul
 { %def
	 /w exch def
	 /v exch def
	 aload pop
	 /d exch def
	 /c exch def
	 /b exch def
	 /a exch def
	 a v mul b w mul add
	 c v mul d w mul add
 } def

% add two points component-wise together
% (ox oy px py -- x y)
/offset
 { %def
	 3 2 roll add
	 3 1 roll add
	 exch
 } def

% which bezier curve operator to use?
% choices: curveto (default) bezierto (debug/visualize)
/curveop { curveto } def
%/curveop { bezierto } def

/med-logo
{ %def
	% some definitions
	% rotate the last curve clockwise
	/matrix -12 rotationmatrix def
	% endpoint of last curve
	/offpoint { 0 60 } def
	% multiply the matrix with x y and anjust the result to the offset
	% (x y -- v w)
	/rotatedpoint 
	 { %def 
	 	matrix 
 	 	3 1 roll
 	 	matrixmul offpoint offset
         } def

	% semicircle
	Radius 90 160 semicircle
	% lower line segment
	/lowpoint { Radius 270 anglecoords } def

	lowpoint 20 sub moveto
	0 20 rlineto
	% curve 1
	-10 -32
	-10 -21
	0 -10
	curveop
	% curve 2
	12 -2.5
	12 12.5
	0 20
	curveop
	% curve 3
	-12 30
	-30 55
	offpoint
	curveop
	% curve 4
	% both control points 5 point above the baseline
	6.25 5 rotatedpoint
	18.75 5 rotatedpoint
	25 0 rotatedpoint
	curveop
        % finally, draw the path
	stroke
} def

/uni-logo
{ %def
	/multiplier 20 def
	multiplier 5 div setlinewidth
	% (x y -- multix multiy)
	/embiggen { multiplier mul exch multiplier mul exch } def
	0 0 moveto

	% steps to move to in the format [right up]
	[
		[1 0]
		[0 -5]
		[1 0]
		[0 5]
		[1 0]
		[0 -5]
		[3 0]
		[0 5]
		[1 0]
		[0 -5]
		[1 0]
		[0 5]
		[1 0]
		[0 -5]
		[1 0]
		[0 6]
		[-5 0]
		[0 -5]
		[-1 0]
		[0 5]
		[-4 0]
	] { aload pop embiggen rlineto } forall
        % close the path and stroke it
	closepath stroke
} def

% set the color of the strokes
LineColor setrgbcolor

